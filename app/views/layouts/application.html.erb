<!DOCTYPE html>
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <% if current_user.present? %>
      <%= render :partial => "header" %>
      <%= yield %>
      <%= render :partial => "footer" %>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
