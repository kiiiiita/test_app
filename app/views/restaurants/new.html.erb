<%= link_to '戻る', :back %>

<%= render 'shared/errors' %>
<%= form_with model: @restaurant, local: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label t('view.restaurant.name') %>
  <%= f.text_field :name %>
  <%= f.label t('view.restaurant.url') %>
  <%= f.text_field :url %>
  <%= f.label t('view.restaurant.visit_date') %>
  <%= f.text_field :visit_date %>
  <%= f.fields_for :tags do |t| %>
    <%= t.label t('view.restaurant.tag') %>
    <%= t.text_field :name %>
  <% end %>
  <%= f.submit 'create' %>
<% end %>